@using RopeyDVDManagementSystem.Models.ViewModels;
@model IEnumerable<DVDReturnModel>

@{
    ViewData["Title"] = "Member Loan History";
    ViewData["Section"] = "MemberDetails";
    Layout = "_LayoutAdmin";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body mx-3">
                <h4 class="card-title mb-2">@ViewBag.MemberFirstName @ViewBag.MemberLastName</h4>
                <p class="card-description mb-4"> Loan History of the User in the last 31 days</p>
                
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group row mb-0">
                            <label class="col-sm-4 col-form-label text-gray">Date of Birth :</label>
                            <div class="col">@ViewBag.Birthday</div>
                        </div>

                        <div class="form-group row mb-0">
                            <label class="col-sm-4 col-form-label text-gray">Membership Category :</label>
                            <div class="col">@ViewBag.MemebershipType</div>
                        </div>

                        <div class="form-group row mb-0">
                            <label class="col-sm-4 col-form-label text-gray">Address :</label>
                            <div class="col">@ViewBag.MemberAddress</div>
                        </div>
                    </div>
                
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group row mb-0">
                            <label class="col-sm-4 col-form-label text-gray">Last Loan Taken :</label>
                            <div class="col">@ViewBag.LastLoan</div>
                        </div>
                        
                        <div class="form-group row mb-0">
                            <label class="col-sm-4 col-form-label text-gray">Total Loan Count :</label>
                            <div class="col">@ViewBag.TotalLoans</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@if(Model != null && Model.Count() > 0)
{
    @foreach (var loanDetail in Model)
    {
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body mx-3">

                        <p class="card-description mb-4"> Loan Number : @loanDetail.LoanNumber </p>
                        
                        <div class="row">
                            <div class="col-md-6 col-sm-12">
                                <div class="form-group row mb-0">
                                    <label class="col-sm-4 col-form-label text-gray">DVD Tile :</label>
                                    <div class="col">@loanDetail.DVDTitleName</div>
                                </div>

                                <div class="form-group row mb-0">
                                    <label class="col-sm-4 col-form-label text-gray">DVD Category :</label>
                                    <div class="col">@loanDetail.DVDCategory</div>
                                </div>
                                
                                <div class="form-group row mb-0">
                                    <label class="col-sm-4 col-form-label text-gray">Copy Number :</label>
                                    <div class="col">@loanDetail.CopyNumber</div>
                                </div>

                                <div class="form-group row mb-0">
                                    <label class="col-sm-4 col-form-label text-gray">Member Name :</label>
                                    <div class="col">@loanDetail.MemberName</div>
                                </div>
                            </div>
                        
                            <div class="col-md-6 col-sm-12">
                                <div class="form-group row mb-0">
                                    <label class="col-sm-4 col-form-label text-gray">Date Out :</label>
                                    <div class="col">@Html.DisplayFor(modelItem => loanDetail.DateOut)</div>
                                </div>
                                
                                <div class="form-group row mb-0">
                                    <label class="col-sm-4 col-form-label text-gray">Date Due :</label>
                                    <div class="col">@Html.DisplayFor(modelItem => loanDetail.DateDue)</div>
                                </div>
                                
                                @if (loanDetail.DateReturned != DateTime.MinValue){
                                    <div class="form-group row mb-0">
                                        <label class="col-sm-4 col-form-label text-gray">Date Returned :</label>
                                        <div class="col">@Html.DisplayFor(modelItem => loanDetail.DateReturned)</div>
                                    </div>

                                    <div class="form-group row mb-0">
                                        <label class="col-sm-4 col-form-label text-gray">Payment Amount :</label>
                                        <div class="col">$ @loanDetail.Payment</div>
                                    </div>
                                }
                                
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body d-flex flex-column justify-content-center text-center" >

                    <div class="d-flex justify-content-center">
                        <script src="https://unpkg.com/@@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
                        <lottie-player src="https://assets7.lottiefiles.com/packages/lf20_a72gydf0.json"  background="transparent"  speed="1"  style="width: 400px; height: 400px;"  loop  autoplay></lottie-player>
                    </div>

                    <p class="text-gray text-center" >Uh Oh! Loan for particular User were not found.</p>
                </div>
            </div>
        </div>
    </div>
}