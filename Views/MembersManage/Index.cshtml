@*Defining Model*@
@using RopeyDVDManagementSystem.Models;
@model List<Member>

@*Defining ViewData*@
@{
    ViewData["Title"] = "Dashboard";
    ViewData["Section"] = "MemberManage";
    Layout = "_LayoutAdmin";
}

@*Coding*@
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body mx-3">
                <h4 class="card-title mb-2">Manage Members</h4>
                <p class="card-description mb-4"> Choose the members that you wish to manage </p>
                <div class="row">
                    <div class="col">
                        <div class="form-group row mb-0">
                            <label class="col-sm-3 col-form-label">Member Number :</label>
                            <div class="col">
                                <div id="the-basics">
                                    <input style="width: 400px;" class="typeahead" type="text" placeholder="Select a Member Number">
                                </div>
                            </div>
                        </div>
                        <div class="float-right mt-3">
                            <button type="submit" class="btn btn-inverse-primary mr-2" value="Search"><i class="mdi mdi-account-search" style="align-content:space-evenly;"></i>Search</button>
                        </div>
                        <div class="text-white float-left mt-3 mr-3">
                            <a asp-controller="MembersManage" asp-action="Create" class="btn btn-inverse-success"><i class="mdi mdi-account-plus"></i> Add New</a>
                        </div>	
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body mb-3 mx-3"> 
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                             <tr  style="text-align:center;">
                                <th class="text-white text-center">Member Number</th>
                                <th class="text-white text-center">Membership Category </th>
                                <th class="text-white text-center">First Name</th>
                                <th class="text-white text-center">Last Name</th>
                                <th class="text-white text-center">Address</th>
                                <th class="text-white text-center">Date of Birth</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr class="border-0 text-center">
                                <td class="align-middle" >@item.MemberNumber</td>
                                <td class="align-middle" >@item.MembershipCategoryNumber</td>
                                <td class="align-middle">@item.MemberFirstName</td>
                                <td class="align-middle">@item.MemberLastName</td>
                                <td class="align-middle">@item.MemberAddress</td>
                                <td class="align-middle">@item.MemberDateOfBirth</td>
                                <td class="align-middle">
                                    <a class="btn btn-inverse-primary" style="margin:5px;" asp-action="Edit" asp-route-id="@item.MemberNumber"><i class="mdi mdi-table-edit" style="align-content:space-evenly;"></i></a>
                                    <a class="btn btn-inverse-danger" style="margin:5px;"  asp-action="Delete" asp-route-id="@item.MemberNumber"><i class="mdi mdi-delete" style="mdi mdi-delete-sweep" asp-action="Delete" asp-route-id="@item.MemberNumber"></i></a> 
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
             </div>
        </div>
    </div>
</div>

