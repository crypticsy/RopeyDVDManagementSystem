@*Defining Model*@
@model List<Member>

@*Defining ViewData*@
@{
    ViewData["Title"] = "Dashboard";
    ViewData["Section"] = "MemberManage";
    Layout = "_LayoutAdmin";
}

@*Coding*@
<h1 style="text-align: center;">Manage Members</h1>
<div style="margin-left:12px; margin-bottom:10px;" class="text-white">
    <a asp-controller="MembersManage" asp-action="Create" class="btn btn-inverse-success"><i class="bi bi-plus-circle"></i> Add New</a>
</div>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body"> 
            <div class="table-responsive">
                <table class="table" >
            <thead>
                <tr  style="text-align:center;">
                    <th>Member Number</th>
                    <th>Membership Category </th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Address</th>
                    <th>Date of Birth</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="text-align:center;">
                        <td class="align-middle" >@item.MemberNumber</td>
                        <td class="align-middle" >@item.MembershipCategoryNumber</td>
                        <td class="align-middle">@item.MemberFirstName</td>
                        <td class="align-middle">@item.MemberLastName</td>
                        <td class="align-middle">@item.MemberAddress</td>
                        <td class="align-middle">@item.MemberDateOfBirth</td>
                        <td class="align-middle">
                            <a class="btn btn-inverse-primary" style="margin:5px;" asp-action="Edit" asp-route-id="@item.MemberNumber"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a class="btn btn-inverse-info" style="margin:5px;" asp-action="Details" asp-route-id="@item.MemberNumber"><i class="bi bi-eye"></i>Details</a>
                            <a class="btn btn-inverse-danger" style="margin:5px;"  asp-action="Delete" asp-route-id="@item.MemberNumber"><i class="bi bi-trash" asp-action="Delete" asp-route-id="@item.MemberNumber"></i>Delete</a> 
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
</div>
</div>

