@model Member

@{
ViewData["Title"] = "Dashboard";
ViewData["Section"] = "MemberManage";
Layout = "_LayoutAdmin";
}



<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body mx-3">
                <h4 class="card-title mb-2">Delete confirmation for @Model.MemberFirstName @Model.MemberLastName</h4>
                <p class="card-description mb-4"> Delete the following information. </p>

                    <div class="row">
                        <div class="col-md-6 col-sm-12">
                            <div class="form-group row mb-0">
                                <label class="col-sm-3 col-form-label">First Name :</label>
                                <div class="col">
                                    <div id="the-basics">
                                         <input asp-for="MemberFirstName" class="form-control" style="color: black;" readonly />
                                        <span asp-validation-for="MemberNumber" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="form-group row mb-0">
                                <label class="col-sm-3 col-form-label">Last Name :</label>
                                <div class="col">
                                    <div id="the-basics">
                                        <input asp-for="MemberLastName" class="form-control" style="color: black;" readonly />
                                        <span asp-validation-for="MemberLastName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <br />
                        </div>
                        <div class="col-md-6 col-sm-12">

                            <div class="form-group row mb-0">
                                <label class="col-sm-3 col-form-label">Address:</label>
                                <div class="col">
                                    <div id="the-basics">
                                        <input asp-for="MemberAddress" class="form-control" style="color: black;" readonly />
                                        <span asp-validation-for="MemberAddress" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="form-group row mb-0">
                                <label class="col-sm-3 col-form-label">Membership Category :</label>
                                <div class="col">
                                    <div id="the-basics">
                                        <input asp-for="MembershipCategoryNumber" class="form-control" style="color: black;" readonly />
                                        <span asp-validation-for="MembershipCategoryNumber" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <br />
                        </div>
                        <div class="col-md-6 col-sm-12">

                            <div class="form-group row mb-0">
                                <label class="col-sm-3 col-form-label">Date of Birth :</label>
                                <div class="col">
                                    <div id="the-basics">
                                        <input asp-for="MemberDateOfBirth" class="form-control" style="color: black;" readonly />
                                        <span asp-validation-for="MemberDateOfBirth" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <br />
                        </div>
                        <br />
                        <br />
                        <div class="col-md-6 col-sm-12">
                             <input type = "hidden" asp-for="MemberNumber">
                             <input type = "Submit" value ="Confirm" class="btn btn-inverse-danger btn-fw mr-4"/>
                             <a type="button" class="btn btn-inverse-info btn-fw" asp-action="Index">Cancel</a>
                        </div>
                    </div>
                    <br />
            </div>
        </div>
    </div>
</div>