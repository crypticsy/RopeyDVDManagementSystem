@*Defining Model*@
@model DVDCategory

@*Defining ViewData*@
@{
    ViewData["Title"] = "Dashboard";
    ViewData["Section"] = "DVDDetails";
    Layout = "_LayoutAdmin";
}

@*Coding*@
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body mx-3">
                <h4 class="card-title mb-2">Delete Category</h4>
                <p class="card-description mb-4"> Deleting Category Information </p>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @*Code for Selected Category data view*@
                <div class="row">
                    <div class="col-md-4 col-sm-12">
                        <div class="form-group row mb-0">
                            <label class="col-sm-4 col-form-label text-gray">Category Name:</label>
                            <div class="col">@Model.CategoryName</div>
                        </div>

                    </div>
                    <div class="col-md-4 col-sm-12">

                        <div class="form-group row mb-0">
                            <label class="col-sm-4 col-form-label text-gray">Description:</label>
                            <div class="col">@Model.CategoryDescription</div>
                        </div>
                    </div>
                    <br />
                    @*Code for delte confirmation action button*@
                    <div class="row mt-5">
                        <div class="col-md-6 col-sm-12 align-content-center" style="margin-left:40%;">
                            <div class="form-group float-right">
                                <form asp-action="Delete">
                                    <input type = "hidden" asp-for="CategoryNumber">
                                    <input type = "Submit" value ="Confirm" class="btn btn-inverse-danger"/>
                                    <a class = "btn btn-inverse-secondary" asp-action="Index" style="margin-left;">Show All</a>
                                </form>
                            </div>
                        </div>
                    </div>
                    <br />
                </div>
            </div>
        </div>
    </div>
</div>
