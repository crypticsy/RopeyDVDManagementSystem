@model Producer

@{
    ViewData["Title"] = "Dashboard";
    ViewData["Section"] = "DVDCopy";
Layout = "_LayoutAdmin";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body mx-3">
                <h4 class="card-title mb-2">Add new Producer</h4>
                <p class="card-description mb-4"> Enter the following information. </p>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6 col-sm-12">

                            <div class="form-group row mb-0">
                                <label class="col-sm-3 col-form-label">Producer Name :</label>
                                <div class="col">
                                    <div id="the-basics">
                                        <input asp-for="ProducerName" style="width: 400px" class="typeahead" type="text"
                                            placeholder="Enter producer name. " />
                                        <span asp-validation-for="ProducerName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <br />
                        </div>
                        
                        <div class="col-md-6 col-sm-12">
                            <button value="Create" type="submit" class="btn btn-inverse-success btn-fw mr-4"> Create
                            </button>
                            <a type="button" class="btn btn-inverse-secondary btn-fw" asp-action="Index">Show All</a>
                        </div>
                    </div>
                    <br/>
                </form>
            </div>
        </div>
    </div>
</div>