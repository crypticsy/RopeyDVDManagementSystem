@*Defining Model*@
@model UserRegisterModel

@*Defining ViewData*@
@{
ViewData["Title"] = "Dashboard";
ViewData["Section"] = "AssistantDetails";
Layout = "_LayoutAdmin";
}


@*Coding*@
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body mx-3">
                <h4 class="card-title mb-2">Add new assistant</h4>
                <p class="card-description mb-4"> Enter the following information. </p>
                @*Defining Controller*@
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6 col-sm-12">
                            @*Code for Assistant data input fields*@
                            <div class="form-group row mb-0">
                                <label class="col-sm-3 col-form-label">User Type :</label>
                                <div class="col">
                                    <div id="the-basics">
                                        <input asp-for="UserType" style="width: 400px" class="typeahead"
                                            type="text" placeholder="Assistant" readonly />
                                        <span asp-validation-for="UserType" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="form-group row mb-0">
                                <label class="col-sm-3 col-form-label">First Name :</label>
                                <div class="col">
                                    <div id="the-basics">
                                        <input asp-for="FirstName" style="width: 400px" class="typeahead"
                                            type="text" placeholder="Enter first name. " />
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <br />
                        </div>
                        <div class="col-md-6 col-sm-12">

                            <div class="form-group row mb-0">
                                <label class="col-sm-3 col-form-label">Last Name:</label>
                                <div class="col">
                                    <div id="the-basics">
                                        <input asp-for="FirstName" style="width: 400px" class="typeahead"
                                            type="text" placeholder="Enter first name. " />
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="form-group row mb-0">
                                <label class="col-sm-3 col-form-label">Username :</label>
                                <div class="col">
                                    <div id="the-basics">
                                        <input asp-for="Username" style="width: 400px" class="typeahead"
                                            type="text" placeholder="Enter username." />
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <br />
                        </div>
                        <div class="col-md-6 col-sm-12">

                            <div class="form-group row mb-0">
                                <label class="col-sm-3 col-form-label">Email:</label>
                                <div class="col">
                                    <div id="the-basics">
                                        <input asp-for="Email" style="width: 400px" class="typeahead"
                                            type="text" placeholder="Enter email." />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="form-group row mb-0">
                                <label class="col-sm-3 col-form-label">Password :</label>
                                <div class="col">
                                    <div id="the-basics">
                                        <input asp-for="Password" style="width: 400px" class="typeahead"
                                            type="text" placeholder="Enter password." />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                        <br />
                         @*Code for action buttons*@
                        <div class="col-md-6 col-sm-12">
                            <button value="Create" type="submit" class="btn btn-inverse-success btn-fw mr-4"> Save
                            </button>
                            <a type="button" class="btn btn-inverse-danger btn-fw" asp-action="Index">Cancel</a>
                        </div>
                    </div>
                    <br />
                </form>
            </div>
        </div>
    </div>
</div>