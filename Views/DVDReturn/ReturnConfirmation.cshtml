@using RopeyDVDManagementSystem.Models.ViewModels;
@{
    ViewData["Title"] = "DVD Return";
    ViewData["Section"] = "DVDReturn";
    Layout = "_LayoutAdmin";
    var returnDetail = ViewData["ReturnDVD"] as DVDReturnModel; 
}







<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body mx-3" >

                <h4 class="card-title mb-2">Individual DVD Return</h4>
                <p class="card-description mb-4"> Loan Details </p>
                
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group row mb-0">
                            <label class="col-sm-4 col-form-label text-gray">DVD Tile :</label>
                            <div class="col">@returnDetail.DVDTitleName</div>
                        </div>

                        <div class="form-group row mb-0">
                            <label class="col-sm-4 col-form-label text-gray">DVD Category :</label>
                            <div class="col">@returnDetail.DVDCategory</div>
                        </div>
                        
                        <div class="form-group row mb-0">
                            <label class="col-sm-4 col-form-label text-gray">Copy Number :</label>
                            <div class="col">@returnDetail.CopyNumber</div>
                        </div>

                        <div class="form-group row mb-0">
                            <label class="col-sm-4 col-form-label text-gray">Member Name :</label>
                            <div class="col">@returnDetail.MemberName</div>
                        </div>
                    </div>
                
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group row mb-0">
                            <label class="col-sm-4 col-form-label text-gray">Date Out :</label>
                            <div class="col">@Html.DisplayFor(modelItem => returnDetail.DateOut)</div>
                        </div>
                        
                        <div class="form-group row mb-0">
                            <label class="col-sm-4 col-form-label text-gray">Date Due :</label>
                            <div class="col">@Html.DisplayFor(modelItem => returnDetail.DateDue)</div>
                        </div>
                        
                        <div class="form-group row mb-0">
                            <label class="col-sm-4 col-form-label text-gray">Over Due Days :</label>
                            <div class="col">@returnDetail.OverDue</div>
                        </div>
                    </div>
                </div>

                <div class="row mt-5">
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group row mb-0">
                            <label class="col-sm-4 col-form-label text-gray">Standard Charge :</label>
                            <div class="col">$ @returnDetail.StandardCharge</div>
                        </div>
                        <div class="form-group row mb-0">
                            <label class="col-sm-4 col-form-label text-gray">Pentalty Charge :</label>
                            <div class="col">$ @returnDetail.PenaltyCharge</div>
                        </div>
                    </div>
                </div>

                <form asp-action="ReturnConfirmation" method="post">
                    <div class="row">
                        <div class="col-md-6 col-sm-12">
                            <div class="form-group row mb-0">
                                <label class="col-sm-4 col-form-label text-gray">Total Payment Amount :</label>
                                <div class="col text-success">$ @returnDetail.Payment</div>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <input type="hidden" name="CopyNumber" value="@returnDetail.CopyNumber" />
                            <input type="hidden" name="LoanNumber" value="@returnDetail.LoanNumber" />
                            <input type="hidden" name="Payment" value="@returnDetail.Payment" />
                            <button type="submit" class="btn btn-inverse-success btn-fw mr-4"> Save </button>
                            <a type="button" class="btn btn-inverse-danger btn-fw" asp-action="Index" >Cancel</a>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>