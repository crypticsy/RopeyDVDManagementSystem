@*Defining Model*@
@model List<DVDCopy>

@*Defining ViewData*@
@{
    ViewData["Title"] = "DVDCopy";
}

@*Coding*@
<h2>DVD Copy</h2>

<div class = "row">
    <div class="col-md-8 offset-md-2">

        <table class="table" style="width:100%">
            <thead>
                <tr>
                    <th>Copy Number</th>
                    <th>DVD Number</th>
                    <th>Date Purchased</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">@item.CopyNumber</td>
                        <td class="align-middle">@item.DVDNumber</td>
                        <td class="align-middle">@item.DatePurchased</td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" style="margin:5px;" asp-action="Edit" asp-route-id="@item.CopyNumber"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a class="btn btn-outline-info" style="margin:5px;" asp-action="Details" asp-route-id="@item.CopyNumber"><i class="bi bi-eye"></i>Details</a>
                            <a class="btn btn-danger" style="margin:5px;"  asp-action="Delete" asp-route-id="@item.CopyNumber"><i class="bi bi-trash" asp-action="Delete" asp-route-id="@item.CopyNumber"></i>Delete</a> 
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div style="position:fixed; right:25px; bottom:25px;" class="text-white">
    <a asp-controller="DVDCopy" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> Add New</a>
</div>