@model DVDCopy

@{
ViewData["Title"] = "Dashboard";
ViewData["Section"] = "DVDCopy";
Layout = "_LayoutAdmin";
}


<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body mx-3">
                <h4 class="card-title mb-2">Delete confirmation for Copy Number: @Model.CopyNumber</h4>
                <p class="card-description mb-4"> Delete the following information. </p>
                    <div class="row">
                        <div class="col-md-6 col-sm-12">

                            <div class="form-group row mb-0">
                                <label class="col-sm-3 col-form-label">DVD Number :</label>
                                <div class="col">
                                    <div id="the-basics">
                                         <input asp-for="DVDNumber" class="form-control" style="color: black;" readonly />
                                        <span asp-validation-for="DVDNumber" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <br />
                        </div>
                         <div class="col-md-6 col-sm-12">
                            <div class="form-group row mb-0">
                                <label class="col-sm-3 col-form-label">Date Purchased:</label>
                                <div class="col">
                                    <div id="the-basics">
                                        <input asp-for="DatePurchased" class="form-control" style="color: black;" readonly />
                                        <span asp-validation-for="DatePurchased" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <br />
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <div class="form-group row mb-0">
                            </div>
                            <br />
                        </div>
                        <br />
                        <div class="col-md-6 col-sm-12">
                            <form asp-action="Delete">
                                    <input type = "hidden" asp-for="CopyNumber">
                                    <input type = "Submit" value ="Confirm" class="btn btn-inverse-danger btn-fw mr-4"/>
                                    <a class = "btn btn-inverse-info btn-fw" asp-action="Index" style="margin-left:7%;">Cancel</a>
                            </form>
                        </div>
                    </div>
                    <br/>
            </div>
        </div>
    </div>
</div>