@model Loan

@{
    ViewData["Title"] = "Dashboard";
    ViewData["Section"] = "DVDManage";
    Layout = "_LayoutAdmin";
}

<h1 style="text-align: center;">View Loan Details</h1>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
        <div class="row">
            <div class="col-md-8 offset-2">
                      <div class="form-group">
                    <label class="control-label">Loan Number</label>
                    <input style="color: black;" asp-for="LoanNumber" class="form-control" readonly />
                    <span asp-validation-for="LoanNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Loan Type Number</label>
                    <input style="color: black;" asp-for="LoanTypeNumber" class="form-control" readonly />
                    <span asp-validation-for="LoanTypeNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Copy Number</label>
                    <input style="color: black;" asp-for="CopyNumber" class="form-control" readonly />
                    <span asp-validation-for="CopyNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Member Number</label>
                    <input style="color: black;" asp-for="MemberNumber" class="form-control" readonly />
                    <span asp-validation-for="MemberNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Date Out</label>
                    <input style="color: black;" asp-for="DateOut" class="form-control" readonly />
                    <span asp-validation-for="DateOut" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Date Due</label>
                    <input style="color: black;" asp-for="DateDue" class="form-control" readonly />
                    <span asp-validation-for="DateDue" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Date Returned</label>
                    <input style="color: black;" asp-for="DateReturned" class="form-control" readonly />
                    <span asp-validation-for="DateReturned" class="text-danger"></span>
                </div>
                 <div class="form-group">
                    <label class="control-label">Return Amount</label>
                    <input style="color: black;" asp-for="ReturnAmount" class="form-control" readonly />
                    <span asp-validation-for="ReturnAmount" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin:5px;">
                    <a class = "btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.LoanNumber">Edit</a> 
                    <a class = "btn btn-outline-secondary" asp-action="Index" style="margin-left:7%;">Show All</a>
                </div>
            </div>
        </div>
    </div>
        </div>
</div>

