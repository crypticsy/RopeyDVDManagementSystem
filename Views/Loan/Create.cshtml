@model Loan 

@{
    ViewData["Title"] = "Dashboard";
    ViewData["Section"] = "DVDManage";
    Layout = "_LayoutAdmin";
}

<h1 style="text-align: center;">Add Loan</h1>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action = "Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Loan Type Number</label>
                    <input asp-for="LoanTypeNumber" class="form-control" />
                    <span asp-validation-for="LoanTypeNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Copy Number</label>
                    <input asp-for="CopyNumber" class="form-control" />
                    <span asp-validation-for="CopyNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Member Number</label>
                    <input asp-for="MemberNumber" class="form-control" />
                    <span asp-validation-for="MemberNumber" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin:5px;">
                    <input type="submit" value="Create" class="btn btn-outline-success float right"/>
                    <a class = "btn btn-outline-secondary" asp-action="Index" style="margin-left:7%;">Show All</a>
                </div>
                </form>
                
            </div>
        </div>
    </div>
</div>
</div>

