@model Actor

@{
    ViewData["Title"] = "Actor Details";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Actor Details: @Model.ActorFirstName @Model.ActorSurName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                   <div class="form-group">
                    <label class="control-label">First Name</label>
                    <input asp-for="ActorFirstName" class="form-control" readonly/><br>
                    <span asp-validation-for="ActorFirstName" class="text-danger"></span>
                    </div>
                <div class="form-group">
                    <label class="control-label">Last Name</label>
                    <input asp-for="ActorSurName" class="form-control" readonly/>
                    <span asp-validation-for="ActorSurName" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin:5px;">
                    <a class = "btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.ActorNumber">Edit</a> 
                    <a class = "btn btn-outline-secondary" asp-action="Index" style="margin-left:7%;">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>

