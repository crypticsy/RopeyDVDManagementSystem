@model Actor

@{
    ViewData["Title"] = "Update an Actor";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Edit Actor: @Model.ActorFirstName @Model.ActorSurName </h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action = "Edit">
                <div class="form-group">
                    <label class="control-label">First Name</label>
                    <input asp-for="ActorFirstName" class="form-control" /><br>
                    <span asp-validation-for="ActorFirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">DVD Title Name</label>
                    <input asp-for="ActorSurName" class="form-control" />
                    <span asp-validation-for="ActorSurName" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin:5px;">
                    <input type="submit" value="Update" class="btn btn-outline-success float right"/>
                    <a class = "btn btn-outline-secondary" asp-action="Index" style="margin-left:7%;">Show All</a>
                </div>
                </form>
                
            </div>
        </div>
    </div>
</div>
