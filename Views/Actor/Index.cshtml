@*Defining Model*@
@model List<Actor>

@*Defining ViewData*@
@{
    ViewData["Title"] = "List of DVDs";
}

@*Coding*@
<h1>Welcome to the Actors View</h1>

<div class = "row">
    <div class="col-md-8 offset-md-2">

        <table class="table" style="width:100%">
            <thead>
                <tr>
                    <th>Actor Number</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">@item.ActorNumber</td>
                        <td class="align-middle">@item.ActorFirstName</td>
                        <td class="align-middle">@item.ActorSurName</td>
                        <td class>
                            <a class="btn btn-outline-primary" style="margin:5px;" asp-action="Edit" asp-route-id="@item.ActorNumber"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a class="btn btn-outline-primary" style="margin:5px;" asp-action="Details" asp-route-id="@item.ActorNumber"><i class="bi bi-eye"></i>Details</a>
                            <a class="btn btn-danger" style="margin:5px;"  asp-action="Delete" asp-route-id="@item.ActorNumber"><i class="bi bi-trash" asp-action="Delete" asp-route-id="@item.ActorNumber"></i>Delete</a> 
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div style="position:fixed; right:25px; bottom:25px;" class="text-white">
    <a asp-controller="Actor" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> Add New</a>
</div>