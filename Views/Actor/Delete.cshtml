@model Actor

@{
    ViewData["Title"] = "Delete Actor";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Actor Delete Confirmation: @Model.ActorFirstName @Model.ActorSurName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                   <div class="form-group">
                    <label class="control-label">First Name</label>
                    <input asp-for="ActorFirstName" class="form-control" readonly/><br>
                    <span asp-validation-for="ActorFirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Last Name</label>
                    <input asp-for="ActorSurName" class="form-control" readonly/>
                    <span asp-validation-for="ActorSurName" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin:5px;">
                    <form asp-action="Delete">
                        <input type = "hidden" asp-for="ActorNumber">
                        <input type = "Submit" value ="Confirm" class="btn btn-danger"/>
                        <a class = "btn btn-outline-secondary" asp-action="Index" style="margin-left:7%;">Show All</a>
                    </form>
                </div>
        </div>
    </div>
</div>
</div>
